	       }
	        
	        System.out.println("\n \n \n Relacao final: \n");
	        
	        for(L=0; L<10; L++){
	            System.out.println("\n" +L+ "-" + nomes[L]+ "\t"+ n1[L]+ "\t"+ n2[L]+ "\t"+ media[L]+ "\t"+ sit[L]);
	        }
    }
}
